<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mensax_red</item>
        <item name="colorPrimaryDark">@color/mensax_red_dark</item>
        <item name="colorAccent">@color/mensax_dark_grey</item>
    </style>

    <!-- Main activity theme. -->
    <style name="DailyMenuTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.MensaX.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.MensaX.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

</resources>
